<%= form_with model: current_user, url: update_personal_details_path, method: :patch do |form|%>
  <div class="modal-body">
    <div class="row">
      <div class="col-lg-6">
        <div class="my-2 form-group">
          <label>First Name</label>
          <%= form.text_field :first_name, value: current_user.first_name, class: "form-control" %>                
        </div>
      </div>

      <div class="col-lg-6">
        <div class="my-2 form-group">
          <label>Last Name</label>
          <%= form.text_field :last_name, value: current_user.last_name, class: "form-control" %>                
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="my-2 form-group">
          <label>City</label>
          <%= form.text_field :city, value: current_user.city, class: "form-control" %>                
        </div>
      </div>

      <div class="col-lg-6">
        <div class="my-2 form-group">
          <label>State</label>
          <%= form.text_field :state, value: current_user.state, class: "form-control" %>                
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="my-2 form-group">
          <label>Country</label>
          <%= form.text_field :country, value: current_user.country, class: "form-control" %>                
        </div>
      </div>

      <div class="col-lg-6">
        <div class="my-2 form-group">
          <label>Pin</label>
          <%= form.text_field :pincode, value: current_user.pincode, class: "form-control" %>                
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="my-2 form-group">
          <label>Profile Title</label>
          <%= form.text_field :profile_title, value: current_user.profile_title, class: "form-control" %>                
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit 'Save Changes', data:{ action: "click->bs-modal#submitEnd" }, class:"btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>

