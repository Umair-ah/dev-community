<div class="col-lg-10 mx-auto mt-5">
  <div class="card mb-5">
    <div class="row">
      <div class="col-lg-4">
        <%= image_tag "user.png", class:"img-fluid" %>
      </div>

      <div class="col-lg-8">
        <div class="card-body">
          <%= render 'personal_details', user: @user %>
        </div>
      </div>

      <% if user_signed_in? && @user == current_user %>
        <div class="col-lg-6">
          <div class="d-flex justify-content-end">
            <%= link_to edit_personal_details_path, data: {controller: "bs-modal-form"} do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <div class="d-flex justify-content-start">
            <h3>About</h3>
          </div>
        </div>



        <% if user_signed_in? && @user == current_user %>
          <div class="col-lg-6">
            <div class="d-flex justify-content-end">
              <%= link_to edit_member_description_path, data: {controller: "bs-modal-form"} do %>
                <i class="bi bi-pencil-fill"></i>
              <% end %>
            </div>
          </div>
        <% end %>
        
      </div>

      <%= render "member_description", user: @user %>

    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <% if user_signed_in? && @user == current_user %>
        <div class="row">
          <div class="col-lg-4">
            <div class="d-flex justify-content-start">
              <h3>Work Experiences</h3>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="d-flex justify-content-start">
              <%= link_to new_work_experience_path, data: { controller: "bs-modal-form" } do %>
                <i class="bi bi-plus"></i>Add Experience
              <% end %>
            </div>
          </div>

          <% if @user.work_experiences.present? %>
            <div class="col-lg-4">
              <div class="d-flex justify-content-start">
                <%= link_to "javascript:void(0)" do %>
                  <i class="bi bi-pencil-fill"></i>Edit Experience
                <% end %>
              </div>
            </div>
          <% end %>
          

        </div>
      <% end %>
    </div>
  </div>
</div>